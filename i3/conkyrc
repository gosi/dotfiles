	border_width = 0,
	default_color = 'grey',
	own_window_colour = 'white',

	no_buffers = true,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	override_utf8_locale = true,

-- position
	alignment = 'top_left',
	gap_x = 15,
	gap_y = 40,
	top_name_width = 12
}

